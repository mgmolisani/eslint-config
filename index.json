{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "quotes": ["error", "backtick"],
    "sort-keys": "warn",
    "react/jsx-curly-brace-presence": [
      "error",
      {
        "props": "always"
      }
    ],
    "react/jsx-sort-props" : "error"
  }
}
